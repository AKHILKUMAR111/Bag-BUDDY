<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Requests</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

<div class="container mx-auto py-8">
    <h1 class="text-2xl font-bold mb-4 text-center">Product Requests</h1>
    <table class="min-w-full bg-white border border-gray-200 shadow-md">
        <thead>
            <tr>
                <th class="border p-4 text-left">Vendor Name</th>
                <th class="border p-4 text-left">Vendor Email</th>
                <th class="border p-4 text-left">Product Name</th>
                <th class="border p-4 text-left">Price</th>
                <th class="border p-4 text-left">Discount</th>
                <th class="border p-4 text-left">Action</th>
            </tr>
        </thead>
        <tbody>
            <% requests.forEach(request => { %>
                <tr>
                    <td class="border p-4"><%= request.vendorName %></td>
                    <td class="border p-4"><%= request.vendorEmail %></td>
                    <td class="border p-4"><%= request.productName %></td>
                    <td class="border p-4"><%= request.productPrice %></td>
                    <td class="border p-4"><%= request.discount %>%</td>
                    <td class="border p-4">
                        <a href="/owners/approve-request/<%= request.requestId %>" class="bg-green-500 text-white px-4 py-2 rounded-lg">Approve</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

</body>
</html>
