

<div class="w-full h-screen flex items-center justify-center">
    <div class="bg-gray-100 p-8 rounded-lg shadow-lg w-1/2 text-center">
        <h2 class="text-2xl font-bold mb-5">Select a Payment Method</h2>

        <!-- Display Total Bill -->
        <div class="bg-white p-4 rounded-md shadow-md mb-6">
            <h3 class="text-xl font-semibold">Total Amount Payable</h3>
            <p class="text-2xl text-green-600 font-bold mt-2">₹ <%= bill %></p>
        </div>

        <!-- Payment Method Selection Form -->
        <form action="/process-payment" method="POST">
            <input type="hidden" name="amount" value="<%= bill %>">

            <div class="flex flex-col gap-4">
                <label class="cursor-pointer flex items-center gap-2 bg-white p-3 rounded-md shadow-md">
                    <input type="radio" name="paymentMethod" value="UPI" required>
                    <span>UPI (Google Pay, PhonePe, Paytm)</span>
                </label>

                <label class="cursor-pointer flex items-center gap-2 bg-white p-3 rounded-md shadow-md">
                    <input type="radio" name="paymentMethod" value="Credit Card">
                    <span>Credit/Debit Card</span>
                </label>

                <label class="cursor-pointer flex items-center gap-2 bg-white p-3 rounded-md shadow-md">
                    <input type="radio" name="paymentMethod" value="Cash on Delivery">
                    <span>Cash on Delivery (COD)</span>
                </label>
            </div>

            <button type="submit" class="mt-5 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-md">
                Proceed to Pay ₹ <%= bill %>
            </button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>
